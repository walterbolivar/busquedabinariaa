#include "stdafx.h"
	#include <iostream>
	#include "conio.h"
	#include "math.h"
	#define MAX 100
	
	using namespace std;
	
	void cargarvector(int a[],int tam);
	void mostrarvector(int a[],int tam);
	void burbuja(int a[],int tam);
	int busquedadbinaria(int a[],int tam,int clave);
	
	int main()
	{
	int T[MAX],n;
	do{
	cout<<"Ingresar el valor: ";
	cin>>n;
	} while
	((n<=0)||(n>MAX));
	
	cargarvector(T,n);
	burbuja(T,n);
	mostrarvector(T,n);
	busquedadbinaria(T,n);
	getch();
	return 0;
	}
	
	
	void cargarvector(int a[],int tam)
	{
	for (int i=0;i<tam;i++)
	{
	cout<<"Ingresar a["<<i<<"]";
	cin>>a[i];
	}
	}
	
	void mostrarvector(int a[],int tam)
	{
	for (int i=0;i<tam;i++)
	{
	cout<<"a["<<i<<"]"<<a[i]<<endl;
	cin>>a[i];
	}
	}
	void burbuja(int a[],int tam)
	{
	int aux;
	for (int i=0;i< tam-1;i++)
	{
	for (int j=i+1;j<tam;j++)
	{if a[i]>a[j];
	{aux=a[i];
	a[i]=a[j];
	a[j]=aux };
	}
	}
	}

